<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wuspace.domain.UserMapper">
    
    <resultMap id="userResultMap" type="com.wuspace.commons.domain.User">
        <result column="id" property="id"></result>
        <result column="username" property="username"></result>

        <collection property="authorities" ofType="com.wuspace.commons.domain.Authority">
            <result column="authority" property="name"></result>
        </collection>
    </resultMap>
    
    <select id="findUserById" parameterType="long" resultType="User">
        select * from users where id = #{id}
    </select>
</mapper>